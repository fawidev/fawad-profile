---
import { SITE_CONTENT, SITE_CONFIG } from "@config";
import Hero from "@components/Hero.astro";
import Layout from "@layouts/Layout.astro";
import About from "@components/About.astro";
import Journey from "@components/Journey.astro";
import Expertise from "@components/Expertise.astro";
import Projects from "@components/Projects.astro";
import Contact from "@components/Contact.astro";

import "../styles/global.css";
---

<Layout>
  <Hero {...SITE_CONTENT.hero} />
  <About {...SITE_CONTENT.about} name={SITE_CONTENT.hero.name} />
  <Journey journey={SITE_CONTENT.journey} />
  <Expertise {...SITE_CONTENT.expertise} />
  <Projects projects={SITE_CONTENT.projects} />
  <Contact email={SITE_CONTENT.hero.email} socialLinks={SITE_CONFIG.socialLinks} />
</Layout>
