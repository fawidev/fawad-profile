---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { WorkStyleProps } from "../types";

type Props = WorkStyleProps;

const { title, description, image, highlights } = Astro.props;
---

<Section text={title} href="workstyle">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5">{description}</p>
    <div
      class="h-80 w-64 flex-shrink-0 rotate-[5deg] overflow-hidden rounded-2xl shadow-2xl ring-4 ring-primary/20 transition-transform duration-300 hover:rotate-0 hover:scale-105 md:rotate-[7deg]"
    >
      <Image
        class="h-full w-full object-cover"
        src={image}
        width="260"
        height="320"
        alt="Fawad working remotely"
      />
    </div>
  </div>
  
  <div class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {highlights.map((highlight, index) => (
      <div 
        class="work-highlight bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-6 hover:bg-primary/20 transition-all duration-300 hover:scale-105"
        style={`animation-delay: ${index * 0.1}s`}
      >
        <div class="flex items-center gap-3 mb-3">
          <span class="text-2xl">{highlight.icon}</span>
          <h3 class="text-lg font-semibold text-white">{highlight.title}</h3>
        </div>
        <p class="text-neutral text-sm leading-relaxed">{highlight.description}</p>
      </div>
    ))}
  </div>
  
  <div class="mt-8 p-6 bg-primary/10 rounded-lg border border-primary/30">
    <div class="flex items-center gap-3 mb-3">
      <span class="text-2xl">ðŸŽ¯</span>
      <h3 class="text-xl font-semibold text-primary">My Remote Work Promise</h3>
    </div>
    <p class="text-neutral leading-relaxed">
      Your success is my priority. I combine technical excellence with clear communication, 
      ensuring every project delivers exceptional value and exceeds expectations.
    </p>
  </div>
</Section>

<style>
  .work-highlight {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .work-highlight:hover .text-2xl {
    animation: bounce 0.6s ease-in-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-5px);
    }
    60% {
      transform: translateY(-3px);
    }
  }
</style>